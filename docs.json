  "logo": {
    "light": "/images/nortgraf_logo.png",
    "dark": "/images/nortgraf_logo_branca.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:suporte@nortgraf.com.br"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
